#!/bin/bash

if [ -z "$1" ]; then
  echo "Need to supply a date:"
  echo "  $ aoc $(TZ=America/New_York date +%e)"
  exit
fi

echo "(WIP) Advent of Code 2019: Day $1"

echo > ./lib/aoc/day$1.ex <<-EOS
defmodule AOC.Day$1 do
  def run do
    part_1("hello")
    part_2("world")
  end

  def part_1(_seed) do
    IO.puts("Hello, world!")
  end

  def part_2(_seed) do
    IO.puts("Hello, world!")
  end
end
EOS
